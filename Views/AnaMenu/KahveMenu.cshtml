@{
    int i = 0;
    var coffeeNames = new List<string>();
    var coffeePrices = new List<int>();

    foreach (var item in Model)
    {
        coffeeNames.Add(item.CoffeeName);
        coffeePrices.Add(item.Price);
        @i += 1;

    }
}



